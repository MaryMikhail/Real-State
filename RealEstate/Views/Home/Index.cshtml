@{
    ViewData["Title"] = "Home Page";
}
@model RealEstate.Models.Property

<section class="home-one home1-overlay home1_bgi1">
    <div class="container">
        <div class="row ">
            <div class="col-lg-12">
                <div class="home_content">
                    <div class="home-text text-center">
                        <h2 class="fz55">Find Your Dream Home</h2>
                        <p class="fz18 color-white">From as low as $10 per day with limited time offer discounts.</p>
                    </div>
                    <div class="home_adv_srch_opt">
                        <div class="tab-content home1_adsrchfrm" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                                <div class="home1-advnc-search">
                                    <form asp-action="Index" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <ul class="h1ads_1st_list mb0">
                                            <li style="margin-left:2%">
                                                <div class="form-group">
                                                    <select asp-for="Country" asp-items="Html.GetEnumSelectList<Country>()" class="form-control">
                                                        <option disabled selected value="" class="text-muted">Country</option>
                                                    </select>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="form-group">
                                                    <select asp-for="PropertyType" asp-items="Html.GetEnumSelectList<PropertyType>()" class="form-control">
                                                        <option disabled selected value="" class="text-muted">Property Type</option>
                                                    </select>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="form-group">
                                                    <select asp-for="PropertyStatus" asp-items="Html.GetEnumSelectList<PropertyStatus>()" class="form-control">
                                                        <option value="" disabled selected>Property Status</option>
                                                    </select>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="form-group">
                                                    <input asp-for="Price" class="form-control" placeholder="Price" />
                                                </div>
                                            </li>
                                            <li class="list-inline-item">
                                                <div class="candidate_revew_select">
                                                    <select asp-for="Rooms" class="form-control">
                                                        <option disabled selected value=""> Rooms </option>
                                                        <option>1</option>
                                                        <option>2</option>
                                                        <option>3</option>
                                                        <option>4</option>
                                                        <option>5</option>
                                                        <option>6</option>
                                                        <option>7</option>
                                                        <option>8</option>
                                                        <option>9</option>
                                                        <option>10</option>
                                                    </select>
                                                </div>
                                            </li><br />
                                            <li class="list-inline-item" style="margin-left: 32%; margin-top: 3%;">
                                                <div class="candidate_revew_select">
                                                    <select asp-for="Bathrooms" class="form-control">
                                                        <option disabled selected value=""> Bathrooms </option>
                                                        <option>1</option>
                                                        <option>2</option>
                                                        <option>3</option>
                                                        <option>4</option>
                                                        <option>5</option>
                                                    </select>
                                                </div>
                                            </li>
                                            <li class="list-inline-item" style="margin-left: 5%; margin-top: 3%;">
                                                <div class="candidate_revew_select">
                                                    <select asp-for="YearBuilt" class="form-control">
                                                        <option disabled selected value=""> YearBuilt </option>
                                                        <option>2014</option>
                                                        <option>2015</option>
                                                        <option>2016</option>
                                                        <option>2017</option>
                                                        <option>2018</option>
                                                        <option>2019</option>
                                                        <option>2020</option>
                                                    </select>
                                                </div>
                                            </li>
                                            <li class="list-inline-item d-block" style=" margin-top: 3%; margin-left: 30%;">
                                                <div class="search_option_button">
                                                    <input type="submit" value="Search" class="btn btn-thm w-50 h-25" />
                                                </div>
                                            </li>
                                        </ul>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Listing Grid View -->
<section class="our-listing bgc-f7 pb30-991">
    <div class="container">
        <div class="row">

        <div class="col-md-12 col-lg-12">
            <div class="row">
                @if(ViewBag.Properties != null)
                {
                    foreach (var item in @ViewBag.Properties)
                    {
                        List<Image> propertyImgs = new List<Image>();
                        foreach (Image image in ViewBag.Images)
                        {

                            @if (item.PropertyID == image.PropertyID)
                            {
                                propertyImgs.Add(image);
                            }
                        }

                        <div class="col-md-6 col-lg-4">
                            <div class="feat_property home7 style4">
                                <div class="thumb">
                                    <div class="fp_single_item_slider">
                                        @foreach (Image image in propertyImgs)
                                        {
                                            <div class="item">
                                                <img class="img-whp" src="~/images/property/@image.ImgData" alt="@image.ImgData">
                                            </div>
                                        }

                                        <div class="item">
                                            <img class="img-whp" src="~/images/property/1.jpg" alt="fp1.jpg">
                                        </div>
                                    </div>
                                    <div class="thmb_cntnt style2">
                                        <ul class="tag mb0">
                                            <li class="list-inline-item"><a href="#">@item.PropertyStatus</a></li>
                                        </ul>
                                    </div>
                                    <div class="thmb_cntnt style3">
                                        <ul class="icon mb0">
                                            <li class="list-inline-item">
                                                <a href="#">
                                                    <span class="flaticon-transfer-1"></span>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="#">
                                                    <span class="flaticon-heart"></span>
                                                </a>
                                            </li>
                                        </ul>
                                        <a class="fp_price" href="#">$@item.Price<small>/mo</small></a>
                                    </div>
                                </div>
                                <div class="details">
                                    <div class="tc_content">
                                        <p class="text-thm">@item.PropertyType</p>
                                        <h4>@item.Title</h4>
                                        <p>
                                            <span class="flaticon-placeholder"></span> @item.Address | @item.City | @item.Country
                                        </p>
                                        <ul class="prop_details mb0">
                                            <li class="list-inline-item"><a href="#">Beds: @item.Rooms</a></li>
                                            <li class="list-inline-item"><a href="#">Baths: @item.Bathrooms</a></li>
                                            <li class="list-inline-item"><a href="#">Sq Ft: @item.AreaSize</a></li>
                                        </ul>
                                    </div>
                                    <div class="fp_footer">
                                        <ul class="fp_meta float-left mb0">
                                            <li class="list-inline-item">
                                                <a href="#">
                                                    @{
                                                        var user = await UserManager.FindByIdAsync(item.UserID);
                                                        var gender = user.gender;
                                                        var mail = user.Email.Split("@");
                                                        var name = mail[0];
                                                    }
                                                     @if (gender == Gender.Male)
                                                    {
                                                            <img src="~/images/team/Male.jpg" class="mr-3 rounded-circle" alt="Male Jpg" style="width: 50px; height:50px ; margin-bottom: 22%">
                                                     }
                                                    else if (gender == Gender.Female)
                                                    {
                                                        <img src="~/images/team/Female.jpg" alt="Female Jpg" class="mr-3 rounded-circle"  style="width: 50px; height:50px ; margin-bottom: 22%">
                                                    }
                                                    </a>
                                            </li>
                                            <li class="list-inline-item"><a href="#">@name</a></li>
                                        </ul>
                                        <div class="fp_pdate float-right">@item.YearBuilt</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        </div>
    </div>
</section>
